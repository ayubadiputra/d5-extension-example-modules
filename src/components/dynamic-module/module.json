{
  "name": "example/dynamic-module",
  "d4Shortcode": "",
  "title": "Dynamic Module",
  "titles": "Dynamic Modules",
  "moduleIcon": "example/module-dynamic",
  "category": "module",
  "attributes": {
    "module": {
      "type": "object",
      "selector": "{{selector}}",
      "default": {
        "meta": {
          "adminLabel": {
            "desktop": {
              "value": "Static Module"
            }
          }
        }
      },
      "styleProps": {
        "bodyFont": {
          "selector": "{{selector}} .dynamic-module__post-item-content"
        }
      }
    },
    "title": {
      "type": "object",
      "selector": "{{selector}} .title",
      "default": {
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "headingLevel": "h2"
                }
              }
            }
          }
        }
      },
      "defaultPrintedStyle": {
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "size": "32px",
                  "lineHeight": "1em",
                  "weight": "500"
                }
              }
            }
          }
        }
      },
      "styleProps": {
        "font": {
          "important": {
            "font": {
              "desktop": {
                "value": {
                  "color": true
                }
              }
            }
          }
        }
      },
      "tagName": "h2",
      "inlineEditor": "plainText",
      "elementType": "heading",
      "childrenSanitizer": "et_core_esc_previously",
      "attributes": {
        "class": "title"
      }
    },
    "subtitle": {
      "type": "object",
      "selector": "{{selector}} .dynamic-module__subtitle",
      "default": {
        "innerContent": {
          "desktop": {
            "value": "Your Subtitle Goes Here"
          }
        },
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "color": "#555555",
                  "headingLevel": "h3"
                }
              }
            }
          }
        }
      },
      "inlineEditor": "plainText",
      "elementType": "heading",
      "childrenSanitizer": "et_core_esc_previously",
      "attributes": {
        "class": "dynamic-module__subtitle"
      }
    },
    "postItems": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": {
              "postsNumber": "5"
            }
          }
        }
      }
    },
    "postTitle": {
      "type": "object",
      "selector": "{{selector}} .dynamic-module__post-item-title",
      "default": {
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "headingLevel": "h3"
                }
              }
            }
          }
        }
      }
    },
    "display_type": {
      "type": "object",
      "selector": "{{selector}} .dynamic-moduledisplay_type",
      "default": {
        "innerContent": {
          "desktop": {
            "value": "countdown_timer"
          }
        }
      },
      "inlineEditor": "plainText",
      "elementType": "SelectContainer",
      "childrenSanitizer": "et_core_esc_previously",
      "attributes": {
        "class": "dynamic-moduledisplay_type"
      }
    },
    "tblStripes": {
      "type": "object",
      "selector": "{{selector}} .dynamic-moduletblstripes",
      "default": {
        "advanced": {
          "applyTo": {
            "desktop": {
              "value": [
                "Column Footer",
                "Column Header",
                "Row Footer"
              ]
            }
          }
        }
      },
      "inlineEditor": "plainText",
      "elementType": "CheckboxesContainer",
      "childrenSanitizer": "et_core_esc_previously",
      "attributes": {
        "class": "dynamic-moduletblstripes"
      }
    },
    "tblStripes2": {
      "type": "object",
      "selector": "{{selector}} .dynamic-moduletblstripes2",
      "default": {
        "advanced": {
          "applyTo": {
            "desktop": {
              "value": "column_footer"
            }
          }
        }
      },
      "inlineEditor": "plainText",
      "elementType": "SelectContainer",
      "childrenSanitizer": "et_core_esc_previously",
      "attributes": {
        "class": "dynamic-moduletblstripes2"
      }
    },
    "image": {
      "type": "object",
      "selector": "{{selector}} .static-module__image img",
      "styleProps": {
        "border": {
          "important": true
        }
      }
    }
  }
}
